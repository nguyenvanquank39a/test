        android:text="Click" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hola! Ứng dụng được phát triển bởi Văn Quân và Kim Thành"
        android:visibility="gone"/>

</LinearLayout>